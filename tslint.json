{
  "extends": "tslint:recommended",
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "curly": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "arrow-parens": false,
    "trailing-comma": [
      true,
      {
        "multiline": "true",
        "singleline": "never"
      }
    ],
    "indent": [
      true,
      "spaces"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive"
      }
    ]
  }
}
